<div class="container">
  <div class="bar">
    {{input value=model.ipsum.title class="bar-input add"}}
  </div>
</div>

<div class="container">
  <div class="content">
    {{textarea
      value=model.ipsum.text class="content-input"
      spellcheck="false"
    }}
  </div>
  <div class="actions">
    <div class="button-wrapper">
      <button {{action "publish"}} class="button active">Update</button>
      {{#each-in errors as |key val|}}
        <p class="error-text">{{key}} {{val}}</p>
      {{/each-in}}
    </div>

    <div class="button-wrapper">
      <button {{action "delete"}} class="button {{if confirmDelete 'error'}}">{{deleteText}}</button>
      {{#if confirmDelete}}
        <p class="error-text">Are you sure you want to do that?</p>
      {{/if}}
    </div>
  </div>
</div>

