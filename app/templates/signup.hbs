<div class="container">
  <div class="bar">
    <h2 class="title">New Profile</h2>
  </div>
</div>

<div class="container">
  <form {{action "signup" on="submit"}}>
    <div class="content">
      <div class="row">
        {{input-block value=model.user.email type="email" placeholder="Email" errors=errors.email}}

        {{input-block value=model.user.username type="text" placeholder="Username" errors=errors.username}}

        {{input-block value=model.user.password type="password" placeholder="Password" errors=errors.password_confirmation }}

        {{input-block value=model.user.password_confirmation type="password" placeholder="Confirm Password" errors=errors.password_confirmation}}

      </div>
      <p>Sign up with an account to create ipsum generators and collect favorites.</p>
    </div>
    <div class="actions">
      <div class="button-wrapper">
        <button class="button {{if isValid 'active'}}" type="submit">Create Account</button>
        {{#each-in errors as |key val|}}
          <p class="error-text">{{key}} {{val}}</p>
        {{/each-in}}
      </div>
    </div>
  </form>

</div>
