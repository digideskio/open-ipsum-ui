<div class="container">
  <div class="bar">
    <form {{action "search" on="submit"}}>
      {{input type="text" value=query placeholder="Search for ipsums..." class="bar-input search"}}
    </form>
  </div>
</div>

<div class="container">
  <div class="row">
    <p class="more">More...</p>
    <h2 class="title">Featured</h2>
  </div>
</div>

<div class="container">
  {{#each model.ipsums as |ipsum|}}
    {{#link-to 'ipsums.show' ipsum.id class="card"}}
      <h3 class="card-title">{{ipsum.title}}</h3>
      <p class="card-content">{{truncate ipsum.generated_sample size=25}}</p>
    {{/link-to}}
  {{/each}}
</div>
